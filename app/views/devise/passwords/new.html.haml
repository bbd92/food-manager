.basement
  .basement__left
    .basement__left__border
      .basement__left__border__wrapper
        .basement__left__border__wrapper__icons
          = image_tag 'logo.png', class: "logo"
          =link_to root_path, class: "basement__left__border__wrapper__icons__back" do
            = image_tag 'back-white.png', class: "basement__left__border__wrapper__icons__back__icon"
  .basement__right
    .basement__right__border
      .basement__right__border__contents
        .basement__right__border__contents__users_form
          %h2 Forgot your password?
          = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
            = render "devise/shared/error_messages", resource: resource
            .field
              = f.label :email
              %br/
              = f.email_field :email, autofocus: true, autocomplete: "email"
            .actions
              = f.submit "Send me reset password instructions"
          = render "devise/shared/links"

.basement
  .basement__left
    .basement__left__border
      .basement__left__border__wrapper
        .basement__left__border__wrapper__icons
          = image_tag 'meat-white.png', class: "basement__left__border__wrapper__icons__category_image"
          =link_to root_path, class: "basement__left__border__wrapper__icons__back" do
            = image_tag 'back-white.png', class: "basement__left__border__wrapper__icons__back__icon"
  .basement__right
    .basement__right__border
      .basement__right__border__contents
        - @meats_and_fishes.each do |meat_and_fish|
          .basement__right__border__contents__content{data: {id: meat_and_fish.id}}
            .basement__right__border__contents__content__name
              = meat_and_fish.name
            .basement__right__border__contents__content__expiration_date
              = meat_and_fish.expiration_date
            .basement__right__border__contents__content__quantity
              = meat_and_fish.quantity
            = link_to food_path(meat_and_fish.id), method: :delete, class: "basement__right__border__contents__content__reduce" do
              - if meat_and_fish.quantity > 1
                = "-"
              - else
                = "Ã—"
